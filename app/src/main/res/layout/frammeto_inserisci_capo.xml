<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/yellow">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inserisci Capo"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="40dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="return"
            android:onClick="rimuoviFrammentoClicked"/>
    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/nomeEditText"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextEmailLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Brand indumento"
            android:textColorHint="@color/black"
            android:textColor="@color/black"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Colore:"
        android:textSize="20dp"
        android:textColor="@color/black"/>

        <GridLayout
            android:id="@+id/gridLayoutColore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="4"
            android:columnCount="4">

            <CheckBox
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_row="0"
                android:layout_column="0"
                android:text="Rosso"
                android:textColor="@color/black"
                android:buttonTint="@color/black"/>

            <CheckBox
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_row="0"
                android:layout_column="1"
                android:text="Verde"
                android:textColor="@color/black"
                android:buttonTint="@color/black"/>

            <CheckBox
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_row="0"
                android:layout_column="2"
                android:text="Blu"
                android:textColor="@color/black"
                android:buttonTint="@color/black"/>

            <CheckBox
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_row="0"
                android:layout_column="3"
                android:text="Giallo"
                android:textColor="@color/black"
                android:buttonTint="@color/black"/>

            <CheckBox
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:layout_column="0"
                android:text="Arancione"
                android:textColor="@color/black"
                android:buttonTint="@color/black"/>


            <CheckBox
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:layout_column="1"
                android:text="Rosa"
                android:textColor="@color/black"
                android:buttonTint="@color/black"/>

            <CheckBox
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:layout_column="2"
                android:text="Viola"
                android:textColor="@color/black"
                android:buttonTint="@color/black"/>

            <CheckBox
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:layout_column="3"
                android:text="Nero"
                android:textColor="@color/black"
                android:buttonTint="@color/black"/>

            <CheckBox
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_row="2"
                android:layout_column="0"
                android:text="Bianco"
                android:textColor="@color/black"
                android:buttonTint="@color/black"/>

            <CheckBox
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_row="2"
                android:layout_column="1"
                android:text="Grigio"
                android:textColor="@color/black"
                android:buttonTint="@color/black"/>

            <CheckBox
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_row="2"
                android:layout_column="2"
                android:text="Marrone"
                android:textColor="@color/black"
                android:buttonTint="@color/black"/>

            <CheckBox
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_row="2"
                android:layout_column="3"
                android:text="Beige"
                android:textColor="@color/black"
                android:buttonTint="@color/black"/>
        </GridLayout>
    
    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="StagionalitÃ :"
        android:textSize="20dp"
        android:textColor="@color/black"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioGroup
            android:id="@+id/radioGroupStag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estivo"
                android:textColor="@color/black"
                android:buttonTint="@color/black"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Invernale"
                android:textColor="@color/black"
                android:buttonTint="@color/black"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Primaverile"
                android:textColor="@color/black"
                android:buttonTint="@color/black"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Autunnale"
                android:textColor="@color/black"
                android:buttonTint="@color/black"/>

        </RadioGroup>
    </HorizontalScrollView>

    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Occasione:"
        android:textSize="20dp"
        android:textColor="@color/black"/>


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioGroup
            android:id="@+id/radioGroupOccasione"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Elegante"
                android:textColor="@color/black"
                android:buttonTint="@color/black"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sportivo"
                android:textColor="@color/black"
                android:buttonTint="@color/black"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Casual"
                android:textColor="@color/black"
                android:buttonTint="@color/black"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Streetwear"
                android:textColor="@color/black"
                android:buttonTint="@color/black"/>

        </RadioGroup>
    </HorizontalScrollView>

    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipologia:"
        android:textSize="20dp"
        android:textColor="@color/black"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="T-shirt"
                android:textColor="@color/black"
                android:buttonTint="@color/black"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Maglia lunga"
                android:textColor="@color/black"
                android:buttonTint="@color/black"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Felpa"
                android:textColor="@color/black"
                android:buttonTint="@color/black"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Camicia"
                android:textColor="@color/black"
                android:buttonTint="@color/black"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giacca"
                android:textColor="@color/black"
                android:buttonTint="@color/black"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cappotto"
                android:textColor="@color/black"
                android:buttonTint="@color/black"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jeans"
                android:textColor="@color/black"
                android:buttonTint="@color/black"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pantalone"
                android:textColor="@color/black"
                android:buttonTint="@color/black"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pantalone corto"
                android:textColor="@color/black"
                android:buttonTint="@color/black"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gonna"
                android:textColor="@color/black"
                android:buttonTint="@color/black"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vestito lungo"
                android:textColor="@color/black"
                android:buttonTint="@color/black"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vestito corto"
                android:textColor="@color/black"
                android:buttonTint="@color/black"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scarpe"
                android:textColor="@color/black"
                android:buttonTint="@color/black"/>

        </RadioGroup>
    </HorizontalScrollView>

    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Immagine"
        android:textSize="20dp"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnImmagineCapo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Inserisci Immagine:"/>

        <Button
            android:id="@+id/btnCreaIndumento"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Crea Indumento" />


    </LinearLayout>

        <ImageView
            android:id="@+id/immagineCapo"
            android:layout_marginLeft="50dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/black"/>

    </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>