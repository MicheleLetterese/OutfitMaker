<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Area Utente"
        android:textSize="40dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:paddingLeft="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nomeAU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome: ..."
            android:textSize="20dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/cognomeAU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cognome: ..."
            android:textSize="20dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/emailAU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: ..."
            android:textSize="20dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/telefonoAU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Telefono: ..."
            android:textSize="20dp"
            android:textColor="@color/black"/>

        <Button
            android:layout_marginTop="20dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Modifica Dati"
            android:onClick="inserimentoModificaDati"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:onClick="disconnessioneClicked"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:id="@+id/contenitoreAreaAdmin"/>
    </LinearLayout>

        <FrameLayout
            android:id="@+id/contenitoreModificaDati"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/linearLayout"
            android:visibility="gone" />

</RelativeLayout>