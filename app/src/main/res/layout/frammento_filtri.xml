<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Filtri"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:textSize="40dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/indietro"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingEnd="15dp"
                    android:onClick="rimuoviFrammentoFiltri"/>
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Colore:"
            android:textSize="20dp"
            android:textColor="@color/black"/>

        <GridLayout
            android:id="@+id/gridLayoutColoreFiltri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="4"
            android:columnCount="4">

            <CheckBox
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_row="0"
                android:layout_column="0"
                android:text="Rosso"
                android:textColor="@color/black"
                android:buttonTint="@color/black"/>

            <CheckBox
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_row="0"
                android:layout_column="1"
                android:text="Verde"
                android:textColor="@color/black"
                android:buttonTint="@color/black"/>

            <CheckBox
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_row="0"
                android:layout_column="2"
                android:text="Blu"
                android:textColor="@color/black"
                android:buttonTint="@color/black"/>

            <CheckBox
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_row="0"
                android:layout_column="3"
                android:text="Giallo"
                android:textColor="@color/black"
                android:buttonTint="@color/black"/>

            <CheckBox
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:layout_column="0"
                android:text="Arancione"
                android:textColor="@color/black"
                android:buttonTint="@color/black"/>


            <CheckBox
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:layout_column="1"
                android:text="Rosa"
                android:textColor="@color/black"
                android:buttonTint="@color/black"/>

            <CheckBox
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:layout_column="2"
                android:text="Viola"
                android:textColor="@color/black"
                android:buttonTint="@color/black"/>

            <CheckBox
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:layout_column="3"
                android:text="Nero"
                android:textColor="@color/black"
                android:buttonTint="@color/black"/>

            <CheckBox
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_row="2"
                android:layout_column="0"
                android:text="Bianco"
                android:textColor="@color/black"
                android:buttonTint="@color/black"/>

            <CheckBox
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_row="2"
                android:layout_column="1"
                android:text="Grigio"
                android:textColor="@color/black"
                android:buttonTint="@color/black"/>

            <CheckBox
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_row="2"
                android:layout_column="2"
                android:text="Marrone"
                android:textColor="@color/black"
                android:buttonTint="@color/black"/>

            <CheckBox
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_row="2"
                android:layout_column="3"
                android:text="Beige"
                android:textColor="@color/black"
                android:buttonTint="@color/black"/>
        </GridLayout>

        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="StagionalitÃ :"
            android:textSize="20dp"
            android:textColor="@color/black"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioGroup
                android:id="@+id/radioGroupStagFiltri"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estivo"
                    android:textColor="@color/black"
                    android:buttonTint="@color/black"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Invernale"
                    android:textColor="@color/black"
                    android:buttonTint="@color/black"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Primaverile"
                    android:textColor="@color/black"
                    android:buttonTint="@color/black"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Autunnale"
                    android:textColor="@color/black"
                    android:buttonTint="@color/black"/>

            </RadioGroup>
        </HorizontalScrollView>

        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipologia:"
            android:textSize="20dp"
            android:textColor="@color/black"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioGroup
                android:id="@+id/radioGroupTipFiltri"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="T-shirt"
                    android:textColor="@color/black"
                    android:buttonTint="@color/black"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Maglia lunga"
                    android:textColor="@color/black"
                    android:buttonTint="@color/black"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Felpa"
                    android:textColor="@color/black"
                    android:buttonTint="@color/black"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Camicia"
                    android:textColor="@color/black"
                    android:buttonTint="@color/black"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giacca"
                    android:textColor="@color/black"
                    android:buttonTint="@color/black"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cappotto"
                    android:textColor="@color/black"
                    android:buttonTint="@color/black"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jeans"
                    android:textColor="@color/black"
                    android:buttonTint="@color/black"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pantalone"
                    android:textColor="@color/black"
                    android:buttonTint="@color/black"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pantalone corto"
                    android:textColor="@color/black"
                    android:buttonTint="@color/black"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gonna"
                    android:textColor="@color/black"
                    android:buttonTint="@color/black"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vestito lungo"
                    android:textColor="@color/black"
                    android:buttonTint="@color/black"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vestito corto"
                    android:textColor="@color/black"
                    android:buttonTint="@color/black"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scarpe"
                    android:textColor="@color/black"
                    android:buttonTint="@color/black"/>

            </RadioGroup>
        </HorizontalScrollView>

        <Button
            android:id="@+id/btn_filtri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ricerca"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycleListFiltri"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>